
<QuizManager>:
    Question1Screen:
        name: "question1"
    CorrectScreen:
        name: "correct"
    IncorrectScreen:
        name: "error"
    Question2Screen:
        name: "Question 2"

<Question1Screen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: 1, .2
            text: "How long is a cross country race"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "2 miles"
                on_release: root.answer_question(False)
            Button:
                text: "10 Kilometers"
                on_release: root.answer_question(False)
            Button:
                text: "3 miles"
                on_release: root.answer_question(True)

<Question2Screen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: 1, .2
            text: "1+2"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "21"
                on_release: root.answer_question(False)
            Button:
                text: "12"
                on_release: root.answer_question(False)
            Button:
                text: "3"
                on_release: root.answer_question(True)

<CorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        Label:
            text: "correct!"
            size_hint: 1,1
        Button:
            text: "next question"
            size_hint: 1,1

<IncorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        Label:
            text: "incorrect!"
            size_hint: 1,1
        Button:
            text: "next question"
            size_hint: 1,1