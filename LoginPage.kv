<QuizManager>:
    Question1Screen:
        name: "question1"
    CorrectScreen:
        name: "correct"
    IncorrectScreen:
        name: "incorrect"
    Question2Screen:
        name: "question2"

<Question1Screen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: 1, .2
            text: "How long is a cross country race"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "2 miles"
                on_release: root.answer_question(False)
            Button:
                text: "10 Kilometers"
                on_release: root.answer_question(False)
            Button:
                text: "3 miles"
                on_release: root.answer_question(True)

<Question2Screen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: 1, .2
            text: "How many miles are in 3200m(answer in text)"
        BoxLayout:
            orientation: "horizontal"
            TextInput:
                id: two
                hint_text: "enter the answer here"
            Button:
                text: "Press Enter"
                on_release: root.answer_question(two.text)


<CorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        Label:
            text: "correct!"
            size_hint: 1,1
        Button:
            text: "next question"
            size_hint: 1,1
            on_release:
                root.advance()


<IncorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        Label:
            text: "Incorrect!"
            size_hint: 1,1
        Button:
            text: "next question"
            size_hint: 1,1
            on_release:
                root.advance()